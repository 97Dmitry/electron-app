{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron app with react",
  "main": "electron/app.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "clean": "rm dist/bundle.js",
    "build-react-dev": "webpack --mode development",
    "build-react-prod": "webpack --mode production",
    "test": "jest",
    "react-start": "webpack serve --hot --mode development",
    "dev": "concurrently -k \"npm run electron-tsc-watch\" \"BROWSER=none npm run react-start\" \"npm:electron\"",
    "electron": "wait-on tcp:8080 && electron .",
    "electron-tsc": "tsc -p tsconfig.electron.json",
    "electron-tsc-watch": "tsc -p tsconfig.electron.json -w"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@hot-loader/react-dom": "^17.0.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "babel-jest": "^27.3.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^6.3.0",
